{
  "name": "worthawatch-site",
  "version": "1.0.0",
  "description": "This is deployed with netlify.",
  "scripts": {
    "test": "mocha test/**/*.test.js",
    "build-functions": "netlify-lambda build src/functions",
    "build-site": "npm run bundle && cp -r src/static-site public",
    "clean": "rm -rf public/",
    "bundle": "rollup -c",
    "bundle-watch": "rollup -c --watch",
    "build": "npm run clean && npm run build-site && npm run build-functions"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ianfeather/worthawatch-site.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ianfeather/worthawatch-site/issues"
  },
  "homepage": "https://github.com/Ianfeather/worthawatch-site#readme",
  "dependencies": {
    "netlify-lambda": "^0.4.0",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "preact": "^8.3.1",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
