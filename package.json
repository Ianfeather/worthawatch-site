{
  "name": "worthawatch-site",
  "version": "1.0.0",
  "description": "worthawatch.today",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ianfeather/worthawatch-site.git"
  },
  "author": "",
  "license": "ISC",
  "scripts": {
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --src=src/site",
    "build": "npm run build-site && npm run build-functions",
    "build-functions": "netlify-lambda build src/functions --config ./webpack.config.js",
    "build-site": "preact build --src=src/site",
    "lint": "eslint src/site",
    "test": "npm run test-functions && npm run test-site",
    "test-functions": "mocha test/**/*.test.js",
    "test-functions-w": "mocha --watch test/**/*.test.js",
    "test-site": "jest ./src/site/tests"
  },
  "dependencies": {
    "aws-sdk": "^2.320.0",
    "nba": "4.15.0",
    "netlify-cli": "^9.13.3",
    "netlify-lambda": "^2.0.15",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "mocha": "^5.2.0",
    "node-fetch": "1.7.3",
    "preact-cli": "^3.0.0",
    "preact-router": "^3.2.1",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "sirv-cli": "1.0.3"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "src/build/",
      "build/*"
    ]
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js",
      "<rootDir>/src/tests/__mocks__/setupTests.js"
    ]
  }
}
